<?xml version="1.0" encoding="UTF-8"?>
<!-- This defines the class hierarchy for German -->

<!-- hierarchy root token -->
<TOKEN>

  <!-- clitics -->
  <SPLIT>
    <!-- proclitics, items appearing at the beginning of the string -->
    <LEFTSPLIT/>
    <!-- enclitics, items appearing at the end of the string -->
    <RIGHTSPLIT/>
  </SPLIT>  

  <!-- numbers -->
  <NUMBER>
    <!-- roman numbers -->
    <ROMAN/>
    <!-- literal numbers -->
    <LITERAL/>
    <!-- digital numbers -->
    <DIGITAL>
      <!-- fraction numbers -->
      <FRACTION/>
      <!-- ordinal numbers -->
      <ORDINAL/>
    </DIGITAL>  
  </NUMBER>

  <!-- punctuation -->
  <PUNCTUATION>
    <!-- terminal punctuation -->
    <TERM_PUNCT/>
    <!-- possible terminal punctuation -->
    <TERM_PUNCT_P/>
    <!-- opening punctuation -->
    <OPEN_PUNCT/>
    <!-- closing punctuation -->
    <CLOSE_PUNCT/>
    <!-- opening and closing punctuation -->
    <OPENCLOSE_PUNCT/>
    <!-- opening bracket -->
    <OPEN_BRACKET/>
    <!-- closing bracket -->
    <CLOSE_BRACKET/>
  </PUNCTUATION>

  <!-- abbreviations in which the final period could also -->
  <!-- function as end-of-sentence -->
  <ABBREVIATION>
    <!-- breaking abbreviation, words which are -->
    <!-- abbreviated when they appear at the end of a sentence, --> 
    <!-- thus the period is ambiguous -->
    <B_ABBREVIATION/>
    <!-- non-breaking abbreviation, words which are never -->
    <!-- abbreviated when they appear at the end of a sentence, --> 
    <!-- thus the period is unambiguous -->
    <NB_ABBREVIATION>
      <!-- an abbreviation which is a title, thus followed by -->
      <!-- a proper name -->
      <TITLE/>
      <!-- an abbreviation which is composed with only one -->
      <!-- upper-case letter -->
      <INITIAL/>
    </NB_ABBREVIATION>
  </ABBREVIATION>
  
  <!-- words -->
  <WORD>
    <EMAIL/>
    <ALL_LOWER_CASE/>
    <ALL_UPPER_CASE/>
    <FIRST_UPPER_CASE/>
  </WORD>

</TOKEN>
  
    
