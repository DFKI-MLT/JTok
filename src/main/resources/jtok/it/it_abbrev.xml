<?xml version="1.0" encoding="UTF-8"?>
<!-- This contains the abbreviation description for Italian. -->
<!-- The regular expressions processing is based on the -->
<!-- dk.brics.automaton package. -->
<!-- See http://www.brics.dk/automaton/doc/index.html -->
<!-- for the abstract syntax -->
<ABBREVIATION_DESCRIPTION>

  <!-- This defines the abbreviation class for different lists -->
  <!-- of abbreviations. The file attribute points to a file in -->
  <!-- the same directory with the list. -->
  <LISTS>  
    <B_ABBREV_LIST file="it_b-abbrev.txt" class="B_ABBREVIATION" encoding="utf-8"/>
  </LISTS>

  <DEFINITIONS>
    <!-- mid name initials -->
    <INITIAL regexp="[A-Z]\." class="INITIAL"/>
    <!-- sequences of single letters, separated by periods -->
    <ONE_LETTER_SEQ regexp="([a-zA-Z]\.)+" class="B_ABBREVIATION"/>
    <!-- tokens that contain only consonants -->
    <!-- don't match tokens that consist only of capitals, like CD -->
    <NO_VOCALS regexp="([a-zA-Z]&amp;[^aeiouyAEIOUY])([a-z]&amp;[^aeiouy])+\." class="B_ABBREVIATION"/>
  </DEFINITIONS>
    
  <RULES>
    <ABBREV_RULE class="B_ABBREVIATION">
      <ONE_LETTER_SEQ/>|<NO_VOCALS/>
    </ABBREV_RULE>
  </RULES>
    
</ABBREVIATION_DESCRIPTION>







